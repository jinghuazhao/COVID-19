#!/usr/bin/bash

export chr=chr${SLURM_ARRAY_TASK_ID}
export WGS=${HOME}/COVID-19/SEQ/wgs/${chr}/${chr}.intervalwgs_v2_GT_only.vcf.bgz
bcftools query -l ${WGS} | \
grep -f work/wgs.samples | \
bcftools view -S - ${WGS} -O z -o - | \
bcftools annotate --set-id +'%CHROM:%POS\_%REF\_%FIRST_ALT' -O z -o work/wgs-${chr}.vcf.gz
bcftools index -f -t work/wgs-${chr}.vcf.gz
